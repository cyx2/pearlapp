<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="center">
      <%= @cornellclass.prefix + " " + @cornellclass.coursenumber.to_s %>
    </h1>

    <h3 class="center">
      <%= @cornellclass.title %>
    </h3>
  </div>
</div> 

<br>

