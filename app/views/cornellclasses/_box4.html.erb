<div class="panel center">
  <h2>More Responses</h2>
</div>

<div class="panel-body">
  <div class="container-fluid">

    <% @cornellclass.showratings.each do |classrating| %>
      
      <% if classrating.moretosay.present? %> 
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="panel panel-default container-fluid">
              <div>
                <h4>
                  This rater gave a overall rating of <%= classrating.rating %>
                </h4>
              </div>
              <div>
                <%= classrating.moretosay %>
              </div>
            </div>

          </div>
        </div>
      <% end %>

    <% end %>
        
    <hr>

  </div>
</div>