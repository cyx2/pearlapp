<div class="well well-sm">
  <h1 class="center">Listing All Cornell Classes</h1>  
  <!-- Automatically paginates the classes page -->
  <div class="center">
     <%= will_paginate @cornellclasses, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<% if user_signed_in? && current_user.id == 1 %>
  <%= link_to 'Pull Classes from Cornell servers', new_cornellclass_path, class: "btn btn-warning btn-large" %>
<% end %>


<table class="table table-hover">
  <thead>
    <tr>
      <th class="center">Term</th>
      <th class="center">Title</th>
      <th class="center">Course</th>
      <th class="center">Instructor</th>
      <th class="center">Avg Overall Rating</th>
      <th class="center"># Ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cornellclasses.each do |cornellclass| %>
      <tr>
        <td><%= cornellclass.semester %></td>
        <td class="col-lg-4 col-md-4 col-sm-3 col-xs-2"><%= cornellclass.title %></td>
        <td><%= cornellclass.prefix %> <%= cornellclass.coursenumber %></td>
        <td class="col-lg-2 col-md-2 col-sm-2 col-xs-1"><%= cornellclass.instructor %></td>
        <td><%= cornellclass.avgrating %></td>
        <td><%= cornellclass.numratings %></td>
        <td>
          <%= link_to '', cornellclass, class: "btn btn-default btn-xs center glyphicon glyphicon-list-alt" %>
        </td>
        <!--
        <td>
          <%= link_to '', new_rating_path, class: "btn btn-success btn-xs center glyphicon glyphicon-pencil" %>
        </td>
        <td><%= link_to 'Edit', edit_cornellclass_path(cornellclass) %></td>
        <td><%= link_to 'Destroy', cornellclass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>
