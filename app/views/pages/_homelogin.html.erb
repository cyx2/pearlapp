
<div class="row" id="homelogin-grid">
	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
		<img id="homelogin-graphic" src="https://s3.amazonaws.com/pearlcourses/home.png">
	</div>
	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 panel panel-default" id="homelogin" style="padding-top: 1rem;">
		<div class="container-fluid">
			<%= form_for(:user, :url => session_path(:user)) do |f| %>
				<div>
					<div class="homelogin-title">
						<p><em>Sign in</em></p>
					</div>
					<div class="homelogin-create">
						or <em><%= link_to "create an account", new_user_registration_path %></em>
					</div>
				</div>
			  
			  <div class="form-group row">
			  	<div class="input-group" style="width: 100%;">
				  	<div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
		        <%= f.email_field :email, class: "form-control", :autofocus => true, :placeholder => "Email" %>
		      </div>
	      </div>
			  <div class="form-group row">
			  	<div class="input-group" style="width: 100%;">
				  	<div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
				  	<%= f.password_field :password, class: "form-control", :placeholder => "Password" %>
				  </div>
			  </div>
			  
			  <div class="form-group homelogin-remember">
			  	<%= link_to "Forgot your password?", new_password_path('user') %>
			  </div>
			  <div class="form-group homelogin-login">
	        <%= f.submit "Sign in", class: "btn btn-primary" %>
	      </div>
			<% end %>
		</div>
	</div>
</div>

<div id="wrapper">
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-lg-offset-1 col-md-offset-1 col-sm-offset-1" id="box-2a">
			<h1>Crowd-sourced Intelligence</h1>
			<p>Everything you need to know about your classes. All in one place.</p>
		</div>
		<div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
			<img id="homelogin-sitePreview" class="img-rounded" src="https://s3.amazonaws.com/pearlcourses/collaboration-700.png">
		</div>
	</div>
</div>

