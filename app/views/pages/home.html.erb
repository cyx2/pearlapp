<!-- Jumbotron with logic tree for display -->
<% if user_signed_in? %>
	<div class="jumbotron center">			
		<h1>
			You're in!
		</h1>
		<p>
			Now let's find some classes, shall we?
		</p>		
	</div>
<% end %>

<!-- Logic tree for home page content -->
<% if user_signed_in? %>

	<%= render 'pages/bugpanel' %>
	
	<!-- Class search -->
	<div class="well well-sm">
		<div class="center">
			<h1>Class Search</h1><br>
		</div>
		<form id="search-form" class="form-horizontal" method="get" action="search_results">
		  <div class="form-group">
		    <label class="col-sm-2 control-label">Course</label>
		    <div class="col-sm-10" id="prefetch-mainsearch">
		      <input type="string" class="form-control typeahead-mainsearch" id="search_text" name="search_text" placeholder="BEE4500: Bioinstrumentation" autofocus>
		    </div>
		  </div>
			<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button class="btn btn-primary" onclick="document.getElementById("search-form").submit()">
		      	<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
		      	 Search <!-- Courses! -->
		      </button>
		    </div>
		  </div>
		</form>
	</div>

	<!-- renders the dashboard page -->
	<%= render 'pages/dashboard' %>

	<% else %>

	<div class="container container-fluid">
		<div class="row" id="homelogin-grid">
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 homelogin-graphic">
				<br><br>
				<div class="progress">
				  <div id="homelogin-graphic-1" class="progress-bar progress-bar-success" style="width: 0%">
				  </div>
				</div>
				<div class="progress">
				  <div id="homelogin-graphic-2" class="progress-bar progress-bar-rating" style="width: 0%">
				  </div>
				</div>
				<div class="progress">
				  <div id="homelogin-graphic-3" class="progress-bar progress-bar-warning" style="width: 0%">
				  </div>
				</div>
				<div class="progress">
				  <div id="homelogin-graphic-4" class="progress-bar progress-bar-danger" style="width: 0%">
				  </div>
				</div>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 panel panel-default" id="homelogin" style="padding-top: 1rem;">
				<%= form_for(:user, :url => session_path(:user)) do |f| %>
					<div>
						<div class="homelogin-title">
							<p><em>Sign in</em></p>
						</div>
						<div class="homelogin-create">
							or <em><%= link_to "create an account", new_user_registration_path %></em>
						</div>
					</div>
				  
				  <div class="form-group">
				  	<div class="input-group" style="width: 100%;">
					  	<div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
			        <%= f.email_field :email, class: "form-control", :autofocus => true, :placeholder => "Email" %>
			      </div>
		      </div>
				  <div class="form-group">
				  	<div class="input-group" style="width: 100%;">
					  	<div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
					  	<%= f.password_field :password, class: "form-control", :placeholder => "Password" %>
					  </div>
				  </div>
				  
				  <div class="form-group homelogin-remember">
				  	<%= f.check_box :remember_me %>
				  	&nbsp;Remember me
				  </div>
				  <div class="form-group homelogin-login">
		        <%= f.submit "Sign in", class: "btn btn-primary" %>
		      </div>
				<% end %>
			</div>
		</div>
	</div>


<% end %>