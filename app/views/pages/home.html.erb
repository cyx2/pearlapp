<!-- Jumbotron with logic tree for content -->
<div class="jumbotron center">	
	<% if user_signed_in? %>
		<h1>
			You're in!
		</h1>
		<p>
			Now let's find some classes, shall we?
		</p>
	<% else %>
		<h1>Welcome to Pearl <span class="label label-warning">beta</span>!</h1>
		<p style="padding-top: 20px">We're glad that you're here.  We're currently developing our site, and we appreciate your patience.</p>
		<p>
		 <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
		 <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
		</p>
	<% end %>
</div>

<!-- Logic tree for home page content -->
<% if user_signed_in? %>

	<!-- The fake class search -->
	<div class="well well-sm">
		<div class="center">
			<h1 style="padding-bottom: 15px">Class Search</h1>
		</div>
		<form class="form-horizontal">
		  <div class="form-group">
		    <label class="col-sm-2 control-label">Course</label>
		    <div class="col-sm-10">
		      <input type="string" class="form-control" id="inputPassword" placeholder="BEE4500, Bioinstrumentation, etc.">
		    </div>
		  </div>
			<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="Search Courses!" class="btn btn-primary">
		      	<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
		      	 Search <!-- Courses! -->
		      </button>
		    </div>
		  </div>
		</form>
	</div>

	<!-- The fake class screener -->
	<div class="well well-sm">
		<div class="center">
			<h1 style="padding-bottom: 15px">Class Screener</h1>
		</div>
		<div>
			<label class="col-sm-2 control-label">Overall</label>
			<div class="progress">
			  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
			    <span class="sr-only">40%</span>
			  </div>
			</div>
			<label class="col-sm-2 control-label">TAs</label>
			<div class="progress">
			  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
			    <span class="sr-only">20%</span>
			  </div>
			</div>
			<label class="col-sm-2 control-label">Homework</label>
			<div class="progress">
			  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
			    <span class="sr-only">60%</span>
			  </div>
			</div>
			<label class="col-sm-2 control-label">Professor</label>
			<div class="progress">
			  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
			    <span class="sr-only">80%</span>
			  </div>
			</div>	
		</div>
	</div>

<% else %>

	<div class="well well-lg">
		<h3>
			Crowd-Sourced Intelligence
		</h3>
		<p>
			Pearl collects and aggregates user feedback.  You can now select classes based on homework difficulty, lecture quality, and so much more.
		</p>
	</div>
	<div class="well well-lg">
		<h3>
			Class Screener
		</h3>
		<p>
			Have an idea of what kind of class you want to take?  Filter through our aggregated data quickly and easily with the screener, and find a class that fits your preferences.
		</p>
	</div>

<% end %>